{{!-- {{#if userId}} --}}
<div style="text-align: center;" id="">
  <button id="logout" class="button is-link is-outlined">logout</button>
  <button
    onclick="location.href='/';"
    class="button is-info is-outlined"
    style=""
  >Home</button>
</div>

<div>
  <h3>{{user.username}}'s Blog: {{title}}</h3>
  {{#each posts}}
    <p>Posted By: {{this.username}}</p>
    <p>{{this.notes}}</p>
    <p>Comments</p>
    <h4>Add a comment</h4>
<form id="comment-form">
    <textarea type="text" id="comment" placeholder="Text input"></textarea>
    <button>Submit</button>
</form>
  {{/each}}
</div>  

<h3>Make a new post in "{{title}}"</h3>
<form id="post-form">
  <textarea type="text" id="post" placeholder="Text input"></textarea>
  <button>Submit</button>
</form>  
//login button

<script src="/js/newPost.js"></script>